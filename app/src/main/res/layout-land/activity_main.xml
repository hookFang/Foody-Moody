<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_green"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/d_375"
        android:layout_height="@dimen/d_80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chefImage"
        android:layout_marginTop="@dimen/d_50"
        android:layout_marginStart="@dimen/d_50"
        android:src="@drawable/first_logo"/>

    <ImageView
        android:id="@+id/chefImage"
        android:layout_width="@dimen/d_250"
        android:layout_height="@dimen/d_340"
        android:src="@drawable/chef"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundLayer"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_main_page_1"
        android:textSize="@dimen/f_30"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/chefImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/d_50"
        android:layout_marginEnd="@dimen/d_50"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_main_page_2"
        android:textSize="@dimen/f_30"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/chefImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/d_50"
        android:layout_marginStart="@dimen/d_150"/>

</androidx.constraintlayout.widget.ConstraintLayout>