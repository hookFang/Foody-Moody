<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_green"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="73dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_80"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/d_100"
        android:src="@drawable/first_logo"/>

    <ImageView
        android:id="@+id/chefImage"
        android:layout_width="@dimen/d_275"
        android:layout_height="@dimen/d_375"
        android:src="@drawable/chef"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundLayer"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_main_page"
        android:textSize="@dimen/f_30"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="260dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="@dimen/d_40"/>

</androidx.constraintlayout.widget.ConstraintLayout>