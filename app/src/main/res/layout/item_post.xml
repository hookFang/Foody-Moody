<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/dark_blue"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout_post_recycler_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/d_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="@dimen/f_20"
            android:paddingStart="@dimen/d_10"
            android:textAlignment="viewStart"
            android:layout_marginStart="@dimen/d_10"
            android:layout_marginEnd="@dimen/d_5"
            tools:ignore="RtlSymmetry"/>

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/d_5"
            android:layout_marginEnd="@dimen/d_10"
            android:textSize="@dimen/f_14"
            android:textAlignment="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ImageView_post"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d_340"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/d_10" />

    <LinearLayout
        android:id="@+id/LinearLayout_home_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/d_10"
        android:paddingTop="@dimen/d_5"
        android:paddingBottom="@dimen/d_5"
        android:background="@color/background_green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_comment"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_marginStart="@dimen/d_10"
            android:background="@drawable/pen"/>

        <Spinner
            android:id="@+id/spinner_review"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_marginStart="@dimen/d_10"
            android:textAlignment="center"
            android:background="@drawable/hat" />

    </LinearLayout>

    <TextView
        android:id="@+id/TextView_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/f_14"
        android:paddingTop="@dimen/d_10"
        android:paddingBottom="@dimen/d_20"
        android:paddingStart="@dimen/d_40"
        android:paddingEnd="@dimen/d_40"
        android:background="@drawable/horizontal_line_1" />

</android.widget.LinearLayout>